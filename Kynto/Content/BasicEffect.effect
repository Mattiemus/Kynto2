Shader BasicEffect
{
	VertexShader 
	{
		#version 330 core

		uniform mat4 mvp;

		layout(location = 0) in vec3 vertexPosition_modelspace;
		
		void main() 
		{
			gl_Position = mvp * vec4(vertexPosition_modelspace, 1.0);
		}
	}

	PixelShader 
	{
		#version 330 core

		out vec3 color;

		void main() 
		{
			color = vec3(1, 0, 0);
		}
	}
}